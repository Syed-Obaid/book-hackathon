<?xml version="1.0"?>
<!--
  3-DOF Robotic Arm URDF Model
  Reference: Chapter 1.3 URDF Basics

  Arm Structure:
  - base_link: Fixed platform (10cm cube)
  - upper_arm: 30cm long cylinder (5cm diameter)
  - forearm: 25cm long cylinder (4cm diameter)
  - hand: 10cm x 5cm x 5cm box (gripper placeholder)

  Joint Structure:
  - shoulder_joint: Revolute, ±90° limits, rotates around y-axis
  - elbow_joint: Revolute, 0° to 150° limits, rotates around y-axis
  - wrist_joint: Continuous (unlimited rotation), rotates around x-axis
-->
<robot name="simple_arm">

  <!-- Base Link (Fixed Platform) -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>

    <collision>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="2.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <!-- Inertia tensor for 10cm cube with 2kg mass -->
      <inertia
        ixx="0.0033" ixy="0" ixz="0"
        iyy="0.0033" iyz="0"
        izz="0.0033"/>
    </inertial>
  </link>

  <!-- Upper Arm Link -->
  <link name="upper_arm">
    <visual>
      <!-- Cylinder is centered at link origin, so offset to align with joint -->
      <origin xyz="0.15 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <!-- 5cm diameter (radius=0.025), 30cm length -->
        <cylinder radius="0.025" length="0.3"/>
      </geometry>
      <material name="red">
        <color rgba="0.8 0 0 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0.15 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.3"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="1.5"/>
      <!-- Center of mass at mid-length (15cm from joint) -->
      <origin xyz="0.15 0 0" rpy="0 0 0"/>
      <!-- Inertia tensor for cylinder: Ixx=Iyy=(1/12)*m*L^2 + (1/4)*m*r^2, Izz=(1/2)*m*r^2 -->
      <inertia
        ixx="0.0125" ixy="0" ixz="0"
        iyy="0.0125" iyz="0"
        izz="0.0005"/>
    </inertial>
  </link>

  <!-- Shoulder Joint (connects base to upper arm) -->
  <joint name="shoulder_joint" type="revolute">
    <parent link="base_link"/>
    <child link="upper_arm"/>
    <!-- Joint is 5cm above base platform -->
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <!-- Rotates around y-axis (pitch motion) -->
    <axis xyz="0 1 0"/>
    <!-- Joint limits: -90° to +90° (-1.57 to 1.57 radians) -->
    <limit
      lower="-1.5708"
      upper="1.5708"
      effort="50.0"
      velocity="2.0"/>
    <!-- Dynamics parameters for simulation -->
    <dynamics damping="0.7" friction="1.0"/>
  </joint>

  <!-- Forearm Link -->
  <link name="forearm">
    <visual>
      <!-- Offset 12.5cm from joint (half of 25cm length) -->
      <origin xyz="0.125 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <!-- 4cm diameter (radius=0.02), 25cm length -->
        <cylinder radius="0.02" length="0.25"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 0.8 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0.125 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.25"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="1.0"/>
      <!-- Center of mass at mid-length (12.5cm from joint) -->
      <origin xyz="0.125 0 0" rpy="0 0 0"/>
      <inertia
        ixx="0.0055" ixy="0" ixz="0"
        iyy="0.0055" iyz="0"
        izz="0.0002"/>
    </inertial>
  </link>

  <!-- Elbow Joint (connects upper arm to forearm) -->
  <joint name="elbow_joint" type="revolute">
    <parent link="upper_arm"/>
    <child link="forearm"/>
    <!-- Joint is at end of upper arm (30cm from shoulder) -->
    <origin xyz="0.3 0 0" rpy="0 0 0"/>
    <!-- Rotates around y-axis -->
    <axis xyz="0 1 0"/>
    <!-- Joint limits: 0° to 150° (0 to 2.618 radians, no hyperextension) -->
    <limit
      lower="0.0"
      upper="2.618"
      effort="30.0"
      velocity="2.0"/>
    <dynamics damping="0.5" friction="0.5"/>
  </joint>

  <!-- Hand Link (Gripper Placeholder) -->
  <link name="hand">
    <visual>
      <!-- Small box representing end-effector/gripper -->
      <origin xyz="0.05 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.05 0.05"/>
      </geometry>
      <material name="green">
        <color rgba="0 0.8 0 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0.05 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.05 0.05"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.5"/>
      <origin xyz="0.05 0 0" rpy="0 0 0"/>
      <!-- Inertia for small box -->
      <inertia
        ixx="0.0001" ixy="0" ixz="0"
        iyy="0.0002" iyz="0"
        izz="0.0002"/>
    </inertial>
  </link>

  <!-- Wrist Joint (connects forearm to hand) -->
  <joint name="wrist_joint" type="continuous">
    <parent link="forearm"/>
    <child link="hand"/>
    <!-- Joint is at end of forearm (25cm from elbow) -->
    <origin xyz="0.25 0 0" rpy="0 0 0"/>
    <!-- Rotates around x-axis (roll motion) -->
    <axis xyz="1 0 0"/>
    <!-- Continuous joint has no limits -->
    <dynamics damping="0.3" friction="0.3"/>
  </joint>

</robot>
